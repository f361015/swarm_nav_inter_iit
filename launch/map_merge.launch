<launch>
    <param name="/use_sim_time" value="true"/>
    <include file="$(find swarm_nav_inter_iit)/turtlebot3_simulations/turtlebot3_gazebo/launch/multi_turtlebot3_slam.launch">
        <arg name="ns" value="robot1"/>
    </include>
    <include file="$(find swarm_nav_inter_iit)/turtlebot3_simulations/turtlebot3_gazebo/launch/multi_turtlebot3_slam.launch">
        <arg name="ns" value="robot2"/>
    </include>
    <include file="$(find swarm_nav_inter_iit)/turtlebot3_simulations/turtlebot3_gazebo/launch/multi_turtlebot3_slam.launch">
        <arg name="ns" value="robot3"/>
    </include>
    <include file="$(find swarm_nav_inter_iit)/turtlebot3_simulations/turtlebot3_gazebo/launch/multi_turtlebot3_slam.launch">
        <arg name="ns" value="robot4"/>
    </include>

    <arg name="first_tb3"  default="robot1"/>
  <arg name="second_tb3" default="robot2"/>
  <arg name="third_tb3"  default="robot3"/>
  <arg name="fourth_tb3"  default="robot4"/>

  <group ns="$(arg first_tb3)/map_merge">
    <param name="init_pose_x"   value="-1"/>
    <param name="init_pose_y"   value="4.5"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="0"  />
  </group>

  <group ns="$(arg second_tb3)/map_merge">
    <param name="init_pose_x"   value="-1"/>
    <param name="init_pose_y"   value="3.5"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="0"  />
  </group>

  <group ns="$(arg third_tb3)/map_merge">
    <param name="init_pose_x"   value="-1"/>
    <param name="init_pose_y"   value="2.5"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="0"  />
  </group>

  <group ns="$(arg fourth_tb3)/map_merge">
    <param name="init_pose_x"   value="-1"/>
    <param name="init_pose_y"   value="1.5"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="0"  />
  </group>

<group ns="map_merge">
  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_namespace" value="robot"/>
    <param name="merged_map_topic" value="/map"/>
    <param name="world_frame" value="map"/>
    <param name="known_init_poses" value="true"/>
    <param name="merging_rate" value="1.0"/>
    <param name="discovery_rate" value="0.05"/>
    <param name="estimation_rate" value="0.1"/>
    <param name="estimation_confidence" value="1.0"/>
  </node>
</group>

  <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_$(arg first_tb3)_tf_broadcaster"  args="0 0 0 0 0 0 map $(arg first_tb3)/map"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_$(arg second_tb3)_tf_broadcaster" args="0 0 0 0 0 0 map $(arg second_tb3)/map"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_$(arg third_tb3)_tf_broadcaster" args="0 0 0 0 0 0 map $(arg third_tb3)/map"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_$(arg fourth_tb3)_tf_broadcaster" args="0 0 0 0 0 0 map $(arg fourth_tb3)/map"/>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find swarm_nav_inter_iit)/turtlebot3_simulations/turtlebot3_gazebo/rviz/multi_turtlebot3_slam.rviz"/>
</launch>
